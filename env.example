# Ramanujan-Swarm Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Anthropic API Key (Required)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# ============================================
# SWARM CONFIGURATION
# ============================================

# Number of parallel agents in the swarm
# Higher values = more exploration but higher API costs
# Default: 20
SWARM_SIZE=20

# Maximum number of evolution iterations
# Default: 50
MAX_ITERATIONS=50

# Stop after finding this many discoveries
# Default: 5
MAX_DISCOVERIES=5

# ============================================
# LLM CONFIGURATION
# ============================================

# Claude model to use
# Latest: claude-sonnet-4-5-20250929 (Claude Sonnet 4.5 - Sep 2025)
# Options: claude-sonnet-4-5-20250929, claude-3-5-sonnet-20241022, claude-3-opus-20240229
# Default: claude-sonnet-4-5-20250929
LLM_MODEL=claude-sonnet-4-5-20250929

# LLM temperature (creativity level)
# Higher = more creative/random, Lower = more conservative
# Range: 0.0 - 1.0, Default: 0.9
LLM_TEMPERATURE=0.9

# Maximum tokens per LLM response
# Claude Sonnet 4.5 supports up to 64,000 output tokens
# Default: 16384 (balanced between quality and cost)
LLM_MAX_TOKENS=16384

# ============================================
# OUTPUT CONFIGURATION
# ============================================

# Directory for results and discoveries
# Default: results
RESULTS_DIR=results

# ============================================
# VERIFICATION SETTINGS
# ============================================

# Timeout for OEIS API requests (seconds)
# Default: 5
VERIFICATION_TIMEOUT=5

